<h1>Edit User</h1>

<%= form_with(model: @user, local: true) do |form| %>

  <div class="field">
    <%= form.label :email %>
    <br><%= form.email_field :email %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <br><%= form.password_field :password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %>
    <br><%= form.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <br><%= form.submit 'Update User', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back', users_path, class: 'btn btn-secondary' %>